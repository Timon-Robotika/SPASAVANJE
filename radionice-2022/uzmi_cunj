#pragma once
#include "helper.h"
void RobotLine::radionica() {
  if (setup()) {
    armOpen();
  }

  static int broj = 0;
  char simbol[10 + sizeof(char)];


  if (broj == 0) {
    if (frontLeft() > frontRight() and frontRight() < 200) {
      if (frontRight() > 120)
        go(80, 20);
      else
        go(20, 80);
    }
    else if (frontRight() > frontLeft() and frontLeft() < 200) {
      if (frontLeft() < 120)
        go(80, 20);
      else
        go(20, 80);
    }
    else
      go(40, 40);

    if (front() < 120) {
      go(90, -90);
      delayMs(500);
      broj += 1;
    }
  }
  else if (broj == 1) {
    if (frontLeft() > frontRight() and frontRight() < 200) {
      if (frontRight() > 120)
        go(80, 20);
      else
        go(20, 80);
    }
    else if (frontRight() > frontLeft() and frontLeft() < 200) {
      if (frontLeft() < 120)
        go(80, 20);
      else
        go(20, 80);
    }
    else
      go(40, 40);

    if (front() < 200) {
      go(30, 30);
      delayMs(1000);
    }
  }
  else if (broj == 2) {
    stop();
    end();
  }




  sprintf(simbol, "%d", broj);
  display(simbol);
}
