#pragma once
#include "helper.h"
void RobotLine::radionica() {
  if (setup()) {
    armOpen();
  }
  static int broj = 0;
  char simbol[10 + sizeof(char)];

  if (broj < 2) {

    if (line(7) and line(1)) {
      go(-70, 70);
      delayMs(200);
      broj += 1;
    }

    else if (lineAny()) {
      lineFollow();
    }
  }




  if (broj == 2) {

    if (line(0) and line(1)) {
      go(90, -90);
      delayMs(500);
      broj += 1;
    }





    else if (lineAny()) {
      lineFollow();
    }
  }



  if (broj == 3) {
    if (line(0) and line(8)) {
      go(70, 70);
      delayMs(150);
      broj += 1;
    }





    else if (lineAny()) {
      lineFollow();
    }

  }

  if (broj > 3) {

    if (line(1) and line(7)) {
      go(-90, 90);
      delayMs(400);
      broj += 1;
    }





    else if (lineAny()) {
      lineFollow();
    }
    else
      go(50, 50);
  }







  // Ne mjenjati, slu≈æi za pretvorbu vrste varijable i ispis na 8x8 led
  sprintf(simbol, "%d", broj);
  display(simbol);

}
