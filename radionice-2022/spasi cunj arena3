#pragma once
#include "helper.h"
void RobotLine::radionica() {

  static int broj = 0;
  char simbol[10 + sizeof(char)];

  if ((leftFront() < 150 and front() < 150) or (rightFront() < 150 and front() < 150)) {

    stop();
    delayMs(100);
    if (front() < 150 and front() > 50) {

      stop();
      delayMs(100);
      if ((leftFront() < 150 and leftFront() > 50) and (rightFront() < 150 and rightFront() > 50)) {


        go(-90, 90);
        delayMs(500);

        while (!lineAny()) {
          go(80, 25);
          noLoopWithoutThis();
        }
        go(-10, 80);
        delayMs(600);

      }
    }
  }

  if (broj < 2) {

    if (line(7) and line(1)) {
      go(-70, 70);
      delayMs(200);
      broj += 1;
    }

    else if (lineAny()) {
      lineFollow();
    }
  }




  if (broj == 2) {

    if (line(0) and line(1)) {
      go(90, -90);
      delayMs(400);
      broj += 1;
    }





    else if (lineAny()) {
      lineFollow();
    }
  }



  if (broj == 3) {
    if (line(0) and line(8)) {
      go(-90, 90);
      delayMs(450);
      broj += 1;
    }



    else if (lineAny()) {
      lineFollow();
    }

  }

  if (broj > 3) {

    if (line(0) and line(8)) {
      go(-90, 90);
      delayMs(400);
      broj += 1;
    }


    else if (lineAny()) {
      lineFollow();
    }
    else
      go(50, 50);
  }



 






  // Ne mjenjati, slu≈æi za pretvorbu vrste varijable i ispis na 8x8 led
  sprintf(simbol, "%d", broj);
  display(simbol);

}
