#pragma once
#include "helper.h"
void RobotLine::radionica() {

  static int broj = 0;
  char simbol[10 + sizeof(char)];

  if (front() < 120 and front() > 60 and broj < 4) {

    stop();
    delayMs(100);
    if (front() < 120 and front() > 60) {

      stop();
      delayMs(100);
      if (front() < 120 and front() > 60) {


        go(-90, 90);
        delayMs(500);
        if (broj == 0) {
          while (!lineAny()) {
            go(70, 25);
            noLoopWithoutThis();
          }
        }
        else if (broj > 0) {
          while (!lineAny()) {
            go(70, 15);
            noLoopWithoutThis();
          }
        }
        go(-40, 90);
        delayMs(350);

      }
    }
  }

  if (broj < 2) {

    if (line(7) and line(1)) {
      go(-70, 70);
      delayMs(200);
      broj += 1;
    }

    else if (lineAny()) {
      lineFollow();
    }
  }




  if (broj == 2) {

    if (line(0) and line(1)) {
      go(90, -90);
      delayMs(400);
      broj += 1;
    }





    else if (lineAny()) {
      lineFollow();
    }



    else if (lineAny()) {
      lineFollow();
    }

  }

  if (broj == 4) {
    if (line(0) or line(8)) {
      go(-90, 90);
      delayMs(400);
      broj += 1;
      armOpen();
    }


    else if (lineAny()) {
      lineFollow();
    }
    else
      go(50, 50);
  }



  if (broj == 5) {
    if (rightFront() < 150) {
      broj++;
    }

    else if (lineAny()) {
      lineFollow();
    }
    else {
      go(50, 50);
    }
  }



  if (broj == 6) {
    if (rightFront() < 120) {
      go(60, 80);
    }
    else {
      go(80, 60);
    }
    if (front() < 140) {
      go(-90, 90);
      delayMs(500);
      broj++;
    }
  }


  if (broj == 7) {
    if (leftFront() < 200){
      stop();
      end();
    }

    if (rightFront() < 120) {
      go(60, 80);
    }
    else {
      go(80, 60);
    }
  }







  // Ne mjenjati, sluÅ¾i za pretvorbu vrste varijable i ispis na 8x8 led
  sprintf(simbol, "%d", broj);
  display(simbol);

}
  }



  if (broj == 3) {
    if (line(0) and line(8)) {
      go(50, 50);
      delayMs(200);
      broj += 1;
    }
