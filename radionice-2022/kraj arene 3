#pragma once
#include "helper.h"

void RobotLine::radionica() {

  static int broj = 0;
  char simbol[10 + sizeof(char)];

  if (setup()) {
    armOpen();
  }

  if (front() < 150) {
    go(-90, 90);
    delayMs(500);
    broj++;
  }

  if (frontRight() < 80) {
    go(40, 60);
  }
  else {
    go(60, 40);
  }
  if (frontLeft() < 200 and broj == 1) {
    armClose();

    go(20, 20);
    delayMs(2100);
    go(-90, 90);
    delayMs(500);
    while (frontRight() > 60 or frontLeft() > 60) {
      go(20, 20);
      noLoopWithoutThis();
    }
    go(-15, -15);
    delayMs(1500);
    armOpen();
    go(15, 15);
    delayMs(2000);
    armCatch();

    broj++;

    stop();
    end();
  }



  // Ne mjenjati, slu≈æi za pretvorbu vrste varijable i ispis na 8x8 led
  sprintf(simbol, "%d", broj);
  display(simbol);


}

